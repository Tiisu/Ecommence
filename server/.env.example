# Backend Environment Variables

# MongoDB Connection String
MONGODB_URL=your_mongodb_connection_string_here

# Frontend URL - Update this with your deployed frontend URL
CLIENT_URL=http://localhost:5173

# For production deployment, replace with your actual frontend URL:
# CLIENT_URL=https://your-frontend-domain.com

# Server Port (optional, defaults to 5000)
PORT=5000

# Cloudinary Configuration (if using image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# PayPal Configuration (if using PayPal payments)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Paystack Configuration (if using Paystack payments)
PAYSTACK_SECRET_KEY=your_paystack_secret_key